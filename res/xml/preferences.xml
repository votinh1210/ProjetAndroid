<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="Paramètres de Connexion">
		<EditTextPreference  android:dialogTitle="Définition de l'adresse IP"
        	android:dialogMessage="Adresse IP:"
            android:key="IpAddress"
            android:title="Adresse IP"
            android:summary="Définition de l'adresse IP"
            android:defaultValue="127.0.0.1" 
            android:singleLine="true"
            android:inputType="number|numberDecimal|text|textNoSuggestions"
            />
        <EditTextPreference  android:dialogTitle="Définition de la Port"
        	android:dialogMessage="Port:"
            android:key="PortSetting"
            android:title="Port"
            android:summary="Définition de la Port"
            android:defaultValue="502"
            android:singleLine="true"
            android:numeric="integer"
            android:inputType="number"  />
        <EditTextPreference  android:dialogTitle="Définir la durée de sondage en ms"
        	android:dialogMessage="Temps de Sondage:"
            android:key="PollTime"
            android:title="Temps de Sondage"
            android:summary="Temps de Sondage (ms)"
            android:defaultValue="1000"
            android:singleLine="true" 
            android:numeric="integer"
            android:inputType="number" 
            />
	</PreferenceCategory>
		
</PreferenceScreen>
